<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StylesSample.DeviceStylePage" Title="Device">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="labelStyles" TargetType="Label" BaseResourceKey="BodyStyle">
                <Setter Property="TextColor" Value="Accent" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Padding="0,20,0,0">
            <Label Text="Title style" Style="{DynamicResource TitleStyle}" />
            <Label Text="Subtitle style" Style="{DynamicResource SubtitleStyle}" />
            <Label Text="Body style" Style="{DynamicResource BodyStyle}" />
            <Label Text="Caption style" Style="{DynamicResource CaptionStyle}" />
            <Label Text="List item detail text style" Style="{DynamicResource ListItemDetailTextStyle}" />
            <Label Text="List item text style" Style="" />
            <Label Text="No style" />
            <Label Text="My body style" Style="{StaticResource labelStyles}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

<!--{DynamicResource ListItemTextStyle}-->